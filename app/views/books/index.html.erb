<section>
  <h1>Últimos libros agregados</h1>
  <% if @books.any? %>
    <% @books.each do |book| %>
      <div class="book">
        <%= image_tag book.photo, alt: "Foto de #{book.title}" %>
        <h3><%= link_to book.title, book %></h3>
        <span><%= book.author %></span>
      </div>
    <% end %>
  <% else %>
    <p>No se han agregado libros últimamente.</p>
  <% end %>
</section>
